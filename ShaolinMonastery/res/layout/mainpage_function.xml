<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainpage_fun_scrollview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/re_cxs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:onClick="onFunctionClicked" >

            <ImageView
                android:id="@+id/ib_cxs"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/main_function_cxs" />

            <TextView
                android:id="@+id/tv_cxs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ib_cxs"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="程序锁"
                android:textColor="#339900"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_d1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:onClick="onFunctionClicked" >

            <ImageView
                android:id="@+id/ib_d1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/main_function_jspc" />

            <TextView
                android:id="@+id/tv_d1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ib_d1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="教师评测"
                android:textColor="#cccc99"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_d2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:onClick="onFunctionClicked">

            <ImageView
                android:id="@+id/ib_d2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/main_function_devoloping" />

            <TextView
                android:id="@+id/tv_d2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ib_d2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="教务通知"
                android:textColor="#33ccff"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_d3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:onClick="onFunctionClicked" >

            <ImageView
                android:id="@+id/ib_d3"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/main_function_devoloping" />

            <TextView
                android:id="@+id/tv_d3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ib_d3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="图书查询"
                android:textColor="#33ccff"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/re_d4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
             android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:gravity="center"
            android:onClick="onFunctionClicked">

            <ImageView
                android:id="@+id/ib_d4"
               android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="false"
                android:scaleType="centerInside"
                android:src="@drawable/main_function_devoloping" />

            <TextView
                android:id="@+id/tv_d4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ib_d4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:text="失物招领"
                android:textColor="#33ccff"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>

</HorizontalScrollView>