<?xml version="1.0" encoding="utf-8"?>
<!-- 新用户填写真实信息界面 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_info_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll1"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/tv_login_info_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="本信息采用加密处理，请放心填写！"
            android:textColor="@color/red" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_login_info_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/black2" />

                <LinearLayout
                    android:id="@+id/re_login_info_xuehao"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_info_xuehao"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_me_card"
                        android:gravity="center"
                        android:text="学      号："
                        android:textColor="#9b9b9b"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_login_info_xuehao1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@id/tv_login_info_xuehao"
                        android:gravity="center_vertical|right"
                        android:hint="(您的学号)"
                        android:textColor="#9b9b9b"
                        android:textColorHint="#DDDDDD"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/login_info_v1"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/re_login_info_xuehao"
                    android:background="@color/black2" />

                <LinearLayout
                    android:id="@+id/re_login_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/login_info_v1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_me_card"
                        android:gravity="center"
                        android:text="姓     名："
                        android:textColor="#9b9b9b"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/et_login_info_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_toRightOf="@id/tv_login_info_name"
                        android:gravity="center_vertical|right"
                        android:hint="(您的真实姓名)"
                        android:textColor="#9b9b9b"
                        android:textColorHint="#DDDDDD"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/login_info_v2"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/re_login_info_name"
                    android:background="@color/black2" />

                <LinearLayout
                    android:id="@+id/re_login_info_sex"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/login_info_v2"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_info_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_me_card"
                        android:gravity="center"
                        android:text="性      别："
                        android:textColor="#9b9b9b"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_login_info_sex1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_login_info_sex"
                        android:drawableRight="@drawable/right"
                        android:gravity="center_vertical|right"
                        android:hint="性别"
                        android:textColor="#9b9b9b"
                        android:textColorHint="#DDDDDD"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/login_info_v3"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/re_login_info_sex"
                    android:background="@color/black2" />

                <LinearLayout
                    android:id="@+id/re_login_info_school"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/login_info_v3"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_info_school"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_me_card"
                        android:gravity="center"
                        android:text="学      校："
                        android:textColor="#9b9b9b"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_login_info_school1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_login_info_school"
                        android:drawableRight="@drawable/right"
                        android:gravity="center_vertical|right"
                        android:hint="学校"
                        android:textColor="#9b9b9b"
                        android:textColorHint="#DDDDDD"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/login_info_v4"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/re_login_info_school"
                    android:background="@color/black2" />

                <LinearLayout
                    android:id="@+id/re_login_info_collage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/login_info_v4"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_info_collage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_me_card"
                        android:gravity="center"
                        android:text="院      系："
                        android:textColor="#9b9b9b"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_login_info_collage1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_login_info_collage"
                        android:drawableRight="@drawable/right"
                        android:gravity="center_vertical|right"
                        android:hint="院系"
                        android:textColor="#9b9b9b"
                        android:textColorHint="#DDDDDD"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/login_info_v5"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/re_login_info_collage"
                    android:background="@color/black2" />

                <LinearLayout
                    android:id="@+id/re_login_info_major"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/login_info_v5"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_info_major"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_me_card"
                        android:gravity="center"
                        android:text="专      业："
                        android:textColor="#9b9b9b"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_login_info_major1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_login_info_major"
                        android:drawableRight="@drawable/right"
                        android:gravity="center_vertical|right"
                        android:hint="专业"
                        android:textColor="#9b9b9b"
                        android:textColorHint="#DDDDDD"
                        android:textSize="16sp" />
                </LinearLayout>
                <!--
                <View
                    android:id="@+id/login_info_v6"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/re_login_info_major"
                    android:background="@color/black2" />

                <LinearLayout
                    android:id="@+id/re_login_info_class"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/login_info_v6"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_info_class"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_me_card"
                        android:gravity="center"
                        android:text="班      级："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_login_info_class1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_login_info_class"
                        android:drawableRight="@drawable/right"
                        android:gravity="center_vertical|right"
                        android:hint="班级"
                        android:textSize="16sp" />
                </LinearLayout>
                -->

                <View
                    android:id="@+id/login_info_v7"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/re_login_info_major"
                    android:background="@color/black2" />

                <LinearLayout
                    android:id="@+id/re_login_info_year"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/login_info_v7"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_login_info_year1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/icon_me_card"
                        android:gravity="center"
                        android:text="入学年份："
                        android:textColor="#9b9b9b" />

                    <TextView
                        android:id="@+id/tv_login_info_year2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_login_info_year1"
                        android:drawableRight="@drawable/right"
                        android:gravity="center_vertical|right"
                        android:hint="入学年份"
                        android:textColor="#9b9b9b"
                        android:textColorHint="#DDDDDD"
                        android:textSize="16sp" />
                </LinearLayout>

                <View
                    android:id="@+id/login_info_v8"
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/re_login_info_year"
                    android:background="@color/black2" />

                <LinearLayout
                    android:id="@+id/re_login_info_rule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/login_info_v8"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp" >

                    <CheckBox
                        android:id="@+id/cb_login_ifo_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_login_info_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/cb_login_ifo_rule"
                        android:text="@string/login_info_rule" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/re_login_info_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/re_login_info_rule"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp" >

                    <Button
                        android:id="@+id/bt_login_info_submit"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:background="@drawable/button_bg"
                        android:text="提交"
                        android:textColor="#ff476706"
                        android:textSize="18.0sp" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>